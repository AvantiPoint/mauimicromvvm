<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:micro="http://schemas.mauimicromvvm.com/2022/dotnet/maui"
       micro:MauiMicro.Autowire="True"
       micro:MauiMicro.SharedContext="{Binding Message}"
       HasShadow="True"
       CornerRadius="15"
       x:Class="MauiMicroSample.Modules.MessageDisplay">
  <VerticalStackLayout VerticalOptions="Center"
                       HorizontalOptions="Center">
    <Label Text="Message Display"
           FontAttributes="Bold" />
    <Label Text="{Binding Message}" />
  </VerticalStackLayout>
</Frame>
