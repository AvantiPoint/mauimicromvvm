{
  "$schema": "http://json.schemastore.org/template",
  "author": "AvantiPoint, LLC",
  "classifications": [
    "MAUI",
    "Multi-platform",
    "Android",
    "iOS",
    "macOS",
    "Mac Catalyst",
    "WinUI"
  ],
  "name": "Maui Micro Project Template",
  "shortName": "maui-micro",
  "identity": "AvantiPoint.MauiMicroProjectTemplate.CSharp",
  "sourceName": "MauiMicroApp.1",
  "preferNameDirectory": true,
  "guids": [
    "683037c3-6415-40f7-a541-bdc57964b0d2"
  ],
  "primaryOutputs": [
    {
      "path": "MauiMicroApp.1.csproj"
    }
  ],
  "symbols": {
    "TargetFramework": {
      "displayName": "Framework",
      "type": "parameter",
      "datatype": "choice",
      "enableQuotelessLiterals": true,
      "replaces": "$dotnetversion$",
      "defaultValue": "net7.0",
      "description": "Target Framework",
      "choices": [
        {
          "choice": "net6.0",
          "displayName": ".NET 6.0 (Long Term Support)",
          "description": "Target .NET 6.0 (Long Term Support)"
        },
        {
          "choice": "net7.0",
          "displayName": ".NET 7.0 (Standard Term Support)",
          "description": "Target .NET 7.0 (Standard Term Support)"
        },
        {
          "choice": "net8.0",
          "displayName": ".NET 8.0 (Preview)",
          "description": "Target .NET 8.0 (Preview)"
        }
      ]
    },
    "ApplicationId": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "com.companyname.mauimicroapp._1",
      "replaces": "$ApplicationId$"
    },
    "Reactive": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "displayName": "Use ReactiveUI"
    },
    "MicrosoftLoggingVersion": {
      "type": "generated",
      "generator": "switch",
      "replaces": "$MicrosoftLoggingVersion$",
      "parameters": {
        "evaluator": "C++",
        "datatype": "string",
        "cases": [
          {
            "condition": "(TargetFramework == 'net6.0')",
            "value": "6.0.0"
          },
          {
            "condition": "(TargetFramework == 'net7.0')",
            "value": "7.0.0"
          },
          {
            "condition": "(TargetFramework == 'net8.0')",
            "value": "8.0.0-preview.1.23110.8"
          }
        ]
      }
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "!Reactive",
          "exclude": [
            "**/FodyWeavers.*"
          ]
        }
      ]
    }
  ]
}